# Environment variables example
# Copy to .env and fill in values

# Application
APP_NAME=Meridian
APP_VERSION=1.0.0
ENVIRONMENT=development
DEBUG=true
SECRET_KEY=change-this-to-a-secure-secret-key-in-production

# Server
HOST=0.0.0.0
PORT=8000
WORKERS=4

# Database
DB_HOST=localhost
DB_PORT=5432
DB_NAME=meridian
DB_USER=meridian
DB_PASSWORD=meridian
DB_POOL_SIZE=10
DB_MAX_OVERFLOW=20

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=

# Security
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
API_KEY_HEADER=X-API-Key
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS_PER_MINUTE=60
# Encryption salt for key derivation (min 16 characters, CHANGE IN PRODUCTION!)
ENCRYPTION_SALT=change-this-salt-in-production

# CORS
CORS_ORIGINS=http://localhost:3000,http://localhost:8000

# Vault (optional)
VAULT_ENABLED=false
VAULT_ADDRESS=http://localhost:8200
VAULT_TOKEN=

# Kafka (optional)
KAFKA_ENABLED=false
KAFKA_BOOTSTRAP_SERVERS=localhost:9092

# MLflow
MLFLOW_TRACKING_URI=http://localhost:5000
MLFLOW_EXPERIMENT_NAME=meridian

# Spark
SPARK_MASTER=local[*]

# Celery
CELERY_BROKER_URL=redis://localhost:6379/1
CELERY_RESULT_BACKEND=redis://localhost:6379/2

